<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:vm="using:GraphicalLab.ViewModels"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:local="clr-namespace:GraphicalLab.Controls.WaypointControl"
             xmlns:graphicalLab="clr-namespace:GraphicalLab"
             xmlns:controls="clr-namespace:GraphicalLab.Controls"
             x:DataType="vm:TransformPageViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GraphicalLab.Views.TransformPage">
    <ScrollViewer>
        <StackPanel Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <Border BorderThickness="1"
                        CornerRadius="100"
                        Margin="10 10 5 0"
                        BorderBrush="#353535"
                        Grid.Column="0">
                    <suki:GlassCard CornerRadius="100"
                                    Height="70">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <avalonia:MaterialIcon Width="20"
                                                   HorizontalAlignment="Right"
                                                   Height="20"
                                                   Margin="3"
                                                   Kind="VectorCurve" />

                            <Button Margin="5 0"
                                    Height="50"
                                    Width="50"
                                    Command="{Binding LoadFigureCommand}"
                                    IsVisible="{Binding Move}"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="File" />
                            </Button>
                            <ComboBox SelectedIndex="{Binding SelectedTransformIndex}"
                                      ItemsSource="{Binding TransformTypes}" />

                            <Button Margin="5 0"
                                    Height="50"
                                    Width="50"
                                    Command="{Binding MoveUpCommand}"
                                    IsVisible="{Binding Move}"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="MouseMoveUp" />
                            </Button>
                            <Button Margin="5 0"
                                    Height="50"
                                    Width="50"
                                    Command="{Binding MoveDownCommand}"
                                    IsVisible="{Binding Move}"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="MouseMoveDown" />
                            </Button>

                            <Button Margin="5 0"
                                    Command="{Binding RotateRightCommand}"
                                    IsVisible="{Binding Rotate}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="RotateRight" />
                            </Button>
                            <Button Margin="5 0"
                                    IsVisible="{Binding Rotate}"
                                    Command="{Binding RotateLeftCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="RotateLeft" />
                            </Button>

                            <Button Margin="5 0"
                                    IsVisible="{Binding Scale}"
                                    Command="{Binding SizeIncreaseCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="FormatFontSizeIncrease" />
                            </Button>
                            <Button Margin="5 0"
                                    IsVisible="{Binding Scale}"
                                    Command="{Binding SizeDecreaseCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="FormatFontSizeDecrease" />
                            </Button>

                            <Button Margin="5 0"
                                    IsVisible="{Binding Display}"
                                    Command="{Binding FlipHorizontalCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="FlipHorizontal" />
                            </Button>
                            <Button Margin="5 0"
                                    IsVisible="{Binding Display}"
                                    Command="{Binding FlipVerticalCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="FlipVertical" />
                            </Button>

                            <Button Margin="5 0"
                                    IsVisible="{Binding Perspective}"
                                    Command="{Binding ShowPerspectiveCommand}"
                                    Height="50"
                                    Width="50"
                                    Padding="3">
                                <avalonia:MaterialIcon Width="25"
                                                       HorizontalAlignment="Center"
                                                       Height="25"
                                                       Margin="3"
                                                       Kind="CubeOutline" />
                            </Button>
                        </StackPanel>
                    </suki:GlassCard>
                </Border>
                <Border Grid.Column="1"
                        Margin="5 10 5 0"
                        CornerRadius="100"
                        BorderThickness="1"
                        BorderBrush="#353535">
                    <suki:GlassCard CornerRadius="100"
                                    Height="70"
                                    Padding="0">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal"
                                        Margin="5 15 0 10">
                                <ToggleSwitch Padding="0"
                                              Margin="0"
                                              IsChecked="{Binding IsGridVisible}" />
                                <TextBlock Margin="0"
                                           Padding="0"
                                           VerticalAlignment="Center">
                                    Сетка
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="10 15 0 10">
                                <ToggleSwitch IsChecked="{Binding IsDebugEnabled}" />
                                <TextBlock VerticalAlignment="Center">Отладка</TextBlock>
                            </StackPanel>
                            <Button Margin="15 10 8 10"
                                    FontSize="15"
                                    Padding="5 0 5 0"
                                    IsEnabled="{Binding IsNextStepAvailable}"
                                    Command="{Binding HandleDebugNextStepCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <avalonia:MaterialIcon Width="30"
                                                           Height="30"
                                                           Kind="SkipNext" />
                                    <TextBlock Margin="0 0 5 0"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding IsDebugEnabled}"
                                               Text="{Binding StepsCountText}" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding ClearBitmapCommand}" Margin="8 10 10 10"
                                    FontSize="15">
                                <avalonia:MaterialIcon Width="30"
                                                       HorizontalAlignment="Right"
                                                       Height="30"
                                                       Kind="Cleaning" />
                            </Button>
                        </StackPanel>
                    </suki:GlassCard>
                </Border>
            </Grid>
            <Border Margin="10 0 5 10" BorderThickness="1"
                    BorderBrush="#353535">
                <Grid>
                    <Image Name="Image"
                           Stretch="Uniform"
                           RenderOptions.BitmapInterpolationMode="None"
                           Source="{Binding Bitmap}" />

                    <controls:PixelGridOverlay
                        BitmapWidth="{Binding BitmapWidth}"
                        BitmapHeight="{Binding BitmapHeight}"
                        IsHitTestVisible="False"
                        IsVisible="{Binding IsGridVisible}" />
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>